@using Entity
<!-- Views/Seller/_ProductListPartial.cshtml -->
@model IEnumerable<ProductInfo>

<table class="layui-table">
    <thead>
        <tr>
            <th>商品名称</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Status</td>
                <td>
                    @if (product.Status == "下架")
                    {
                        <a href="/Seller/ShelveProduct?productId=@product.Id" class="layui-btn layui-btn-xs">上架</a>
                    }
                    else
                    {
                        <a href="/Seller/UnshelveProduct?productId=@product.Id" class="layui-btn layui-btn-xs layui-btn-danger">下架</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>